@{
    ViewData["Title"] = "ProductFilter";
    Layout = "~/Views/Shared/LayoutClient.cshtml";
}


<div>
    @if (ViewBag.Show != null)
    {
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in ViewBag.Show)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    } @if(ViewBag.Search != null){
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in ViewBag.Search)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>